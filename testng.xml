<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite">
	<!-- Wrap each class into different Test will allow to close browser after test execution -->
	<!-- If you use single Test for all classes, browsers will close at the end, that is not good practice-->
  <test name="Test">
    <classes>
      <class name="EndToEnd.AppTest"/>
      </classes>
  </test>
  
  <test name="HomePage">
    <classes>
      <class name="EndToEnd.HomePage"/>
      </classes>
  </test>
  
  <test name="ValidationUsingAssertion">
    <classes>
      <class name="EndToEnd.ValidationUsingAssertion"/>
    </classes>
  </test> <!-- Test -->
  
  
</suite> <!-- Suite -->
